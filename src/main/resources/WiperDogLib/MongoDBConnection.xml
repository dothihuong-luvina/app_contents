import com.gmongo.GMongo
import java.text.SimpleDateFormat
import groovy.json.*
import org.wiperdog.CustomMongoDbConnection.CMongoDBConn

class MongoDBConnection{
 def static final dbName = 'wiperdog'
 def static final host= '127.0.0.1'
 def static final port = 27017
 def static final user = ''
 def static final pass = ''
 def cGmongoDBConn = new CMongoDBConn()

 def MongoDBConnection(){
    this.getConnection()
 }

 //Get new connection
 def getConnection(){
   Properties props = System.getProperties();
   def xwiki_dir = props.getProperty('user.dir');
   File f = new File(xwiki_dir +"/webapps/xwiki/resources/conf.params")
   
   cGmongoDBConn.getConnection(f)
   
   return cGmongoDBConn.gmongo
 }

 //Close connection
 def closeConnection(){
    cGmongoDBConn.closeConnection()
 }

 //Get mongoDB Object
 def getMongoDB(){
    return cGmongoDBConn.getMongoDB()
 }
}
